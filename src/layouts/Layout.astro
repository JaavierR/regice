---
import Navbar from "@/components/Navbar.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script>
      try {
        if (
          localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      } catch (_) {}
    </script>
    <title>{title} - javierreyes.dev</title>
  </head>

  <body
    class="antialiased text-zinc-900 dark:text-white flex flex-col flex-1 bg-zinc-50 dark:bg-slate-900 transition duration-500"
  >
    <div
      class="min-h-[0.1875rem] w-full bg-gradient-to-r from-transparent via-cyan-500"
    >
    </div>
    <Navbar />
    <slot />
  </body>
</html>
