---
import "@/style/global.css";
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Techs from "@/components/Techs.astro";
import Work from "@/components/Work.astro";
import ArticleLink from "@/components/ArticleLink.astro";
import type { Article } from "@/components/ArticleLink.astro";

const work = [
  {
    company: "Developen Technology",
    logo: "imgs/logo-dark.png",
    role: "Software Engineer",
    startYear: 2019,
    endYear: 2022,
  },
  {
    company: "Universidad de Santiago de Chile",
    logo: "imgs/logo-usach.svg",
    role: "Professor",
    startYear: 2021,
    endYear: 2022,
  },
  {
    company: "IBM",
    logo: "https://upload.wikimedia.org/wikipedia/commons/5/51/IBM_logo.svg",
    role: "Intern",
    startYear: 2019,
    endYear: 2019,
  },
];

const articles = (await Astro.glob("./articles/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.publishDate).valueOf() -
    new Date(a.frontmatter.publishDate).valueOf()
) as { frontmatter: Article }[];
---

<Layout title="Javier Reyes">
  <main>
    <!-- TODO: Change logo & and add a nice patter for the bg with blur effects -->
    <Hero image="https://avatars.githubusercontent.com/u/4650238?v=4" />
    <div class="px-4 sm:px-8 mt-24 md:mt-28">
      <div class="max-w-2xl lg:max-w-5xl mx-auto">
        <div
          class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex flex-col gap-16">
            {
              articles.map((article) => (
                <ArticleLink article={article.frontmatter} />
              ))
            }
          </div>
          <div class="space-y-10 lg:pl-16 xl:pl-24">
            <Work work={work} />
          </div>
        </div>
      </div>
    </div>
    <Techs />
  </main>
</Layout>
