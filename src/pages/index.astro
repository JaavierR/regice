---
import "@/style/global.css";
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import Header from "@/components/Header.astro";

const res = await fetch("https://api.github.com/users/JaavierR");
const image = (await res.json()).avatar_url;

const skills = [
  "JavaScript",
  "TypeScript",
  "MySQL",
  "PostgreSQL",
  "React",
  "Next.js",
  "Vue.js",
  "Nuxt.js",
  "Tailwind CSS",
  "PHP",
  "Laravel",
  "Python",
];
---

<Layout title="Welcome to my site.">
  <main class="max-w-4xl mx-auto">
    <Header image={image} />

    <section id="technologies">
      <h3
        class="px-4 text-xl font-medium uppercase text-gray-400 dark:text-violet-200 stylistic-alternates"
      >
        Technologies I use
      </h3>
      <ul
        role="list"
        class="mt-4 px-4 lg:px-0 grid grid-cols-2 md:grid-cols-4 gap-4"
      >
        {skills.map((skill) => <Card brand={skill} />)}
      </ul>
    </section>
  </main>
</Layout>
